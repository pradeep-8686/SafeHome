                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="@string/services"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
