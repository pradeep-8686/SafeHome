<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">


    <LinearLayout
        android:id="@+id/added_member_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:background="@drawable/my_vehicles_tab_bg"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/basement_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Level : B1"
            android:padding="3dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="start"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/lot_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lot No : 102"
            android:padding="3dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="start"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Type : 2-Wheeler"
            android:paddingBottom="10dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="start"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp" />


    </LinearLayout>


</LinearLayout>