<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".maintenance.MyDuesFragment">

    <TextView
        android:id="@+id/total_due_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:paddingTop="5dp"
        android:fontFamily="@font/poppins_regular"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:text="Dues : 500"
        android:background="@drawable/boarder_bg"
        android:textColor="@color/app_color"
        android:textSize="16sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/empty_maintenance_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="9dp"
        android:paddingTop="5dp"
        android:fontFamily="@font/poppins_regular"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:paddingBottom="5dp"
        android:text="Maintenance list will be coming Soon"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/my_dues_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>