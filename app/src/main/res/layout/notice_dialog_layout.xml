<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_15dp"
            android:padding="@dimen/_5dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Description"/>

        <ImageView
            android:id="@+id/notice_dialog_closeImg"
            android:padding="@dimen/_5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/close"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Posted by:"/>

        <TextView
            android:id="@+id/posted_dialog_notice_nameTxt"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:text="Admin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Date: "/>
        <TextView
            android:id="@+id/posted_dialog_notice_dateTxt"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:text="23/08/2023"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Time: "/>
        <TextView
            android:id="@+id/posted_dialog_notice_timeTxt"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:text="10:00 AM"/>

    </LinearLayout>


    <TextView
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginTop="@dimen/_7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Note"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginRight="@dimen/_25dp"
        android:layout_marginTop="@dimen/_5dp"
        android:paddingTop="@dimen/_10dp"
        android:paddingRight="@dimen/_20dp"
        android:paddingLeft="@dimen/_10dp"
        android:paddingBottom="@dimen/_10dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="@dimen/_15dp"
        android:background="@drawable/rectangular_white_layout_bg"
        android:text="@string/notice_dialog_txt"/>

</LinearLayout>