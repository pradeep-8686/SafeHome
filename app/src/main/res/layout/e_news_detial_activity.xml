<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/black_screes_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/back_btn_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/back"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tittle_txt"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="ENews"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/back_btn_click"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="2dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10dp">



                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/my_dues_gradient_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/news_time_stamp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2Hrs Ago"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_14sp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:gravity="end"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_regular"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_marginTop="@dimen/_10dp"
                            android:layout_marginLeft="@dimen/_20dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/news_topic_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Live Music"
                                android:textSize="24sp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_regular"/>

                            <TextView
                                android:id="@+id/news_content_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="14sp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_regular"/>

                            <ImageView
                                android:id="@+id/e_news_item_img"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                />

                            <TextView
                                android:layout_marginTop="@dimen/_15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thank you,"
                                android:textSize="14sp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_regular"/>

                            <TextView
                                android:id="@+id/enews_creator_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Admin"
                                android:textSize="14sp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_regular"/>

                            <ImageView
                                android:id="@+id/share_icon_img"
                                android:layout_marginTop="@dimen/_15dp"
                                android:layout_marginBottom="@dimen/_15dp"
                                android:layout_width="@dimen/_20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/share_icon"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
