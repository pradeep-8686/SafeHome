<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_pink"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/added_member_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:padding="1dp"
            android:src="@drawable/close" />

    </LinearLayout>


    <ImageView
        android:id="@+id/profileImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="1dp"
        android:src="@drawable/scooter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Swiggy"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:gravity="center"/>



    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:tint="@color/black"
            android:padding="1dp"
            android:src="@drawable/walking_man" />

        <TextView
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 July 2023, 10:30 PM"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:background="@drawable/rectangler_vrify_bg"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="Edit"
            android:textColor="#FF5600"
            android:background="@drawable/plain_rectangle_bg"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>