<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_dues_gradient_bg"
            android:orientation="vertical">


            <TextView
                android:id="@+id/house_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/facilities_list_image_view"
                android:gravity="start"
                android:text=""
                android:layout_marginStart="20dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:id="@+id/white_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_below="@id/house_name_tv"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/facilities_list_image_view"
                android:background="@color/hash_line" />

            <ImageView
                android:id="@+id/facilities_list_image_view"
                android:layout_width="96dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:gravity="start"
                android:src="@drawable/ic_launcher_background"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/book_noew_txt"
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:layout_below="@id/facilities_list_image_view"
                android:layout_alignStart="@+id/facilities_list_image_view"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/pay_now_solid_bg"
                android:gravity="center"
                android:paddingLeft="18dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:text="Book Now"
                android:textColor="@color/white"
                android:textSize="12sp" />



            <RelativeLayout
                android:id="@+id/due_tv_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/house_name_tv"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/facilities_list_image_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/view_details_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="View Details"
                    android:background="@drawable/view_details_blue_bg"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/view_gallery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/facilities_list_image_view"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp"
                android:text="View Gallery"
                android:textColor="@color/black"
                android:textSize="8sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>