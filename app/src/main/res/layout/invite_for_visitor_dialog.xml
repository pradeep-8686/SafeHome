<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/invite_for_text"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_width="0dp"
            android:layout_weight="0.85"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Invite for XYZ"
            android:fontFamily="@font/poppins_regular"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/ic_close"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20dp"
            android:layout_weight="0.15"
            android:src="@drawable/close"/>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/invited_by_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="@dimen/_7dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Hey! You're invited by Teja"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="@dimen/_5dp"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/editext_bg_blue"
        android:backgroundTint="#DAD6D6"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="OTP : 3451"/>
    <TextView
        android:id="@+id/invited_show_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginLeft="@dimen/_5dp"
        android:layout_marginRight="@dimen/_5dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="@string/invite_for_visitor_text"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/_15dp"
            android:paddingLeft="@dimen/_15dp"
            android:paddingBottom="@dimen/_5dp"
            android:backgroundTint="#DAD6D6"
            android:paddingTop="@dimen/_5dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/editext_bg_blue"
            android:layout_gravity="center"
            android:text="Jan 1, 2021"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/_15dp"
            android:backgroundTint="#DAD6D6"
            android:paddingLeft="@dimen/_15dp"
            android:paddingBottom="@dimen/_5dp"
            android:paddingTop="@dimen/_5dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/editext_bg_blue"
            android:layout_gravity="center"
            android:text="09:00 AM"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="@dimen/_5dp"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/rectangler_vrify_bg"
        android:layout_marginTop="@dimen/_25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Share Details"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/gmail_img"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/mail_icon"/>

            <TextView
                android:id="@+id/mail_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Mail"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/whatsapp_img"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/whatsapp_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Whatsapp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/message_img"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/share_message_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Message"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>