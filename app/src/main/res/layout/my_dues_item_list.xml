        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/invoice_period_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:gravity="start"
                android:paddingTop="1dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="@string/invoice_period_title"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/invoice_period_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/invoice_period_title"
                android:gravity="start"
                android:paddingTop="1dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/due_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:gravity="start"
                android:paddingTop="1dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="@string/due_date_title"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/due_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/due_date_title"
                android:gravity="start"
                android:paddingTop="1dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_invoice_amount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:gravity="start"
                android:paddingTop="1dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:text="@string/total_invoice_amount_title"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/total_invoice_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/total_invoice_amount_title"
                android:gravity="start"
                android:paddingTop="1dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/view_invoice_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/view_invoice_bg"
                android:gravity="center"
                android:paddingBottom="9dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:text="@string/view_invoice"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/paid_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_invoice_bg"
                android:gravity="center"
                android:paddingBottom="9dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="@string/Paid"
            />

            <TextView
                android:id="@+id/pay_now_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/pay_now_solid_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/pay_now"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.google.android.material.card.MaterialCardView
                android:visibility="gone"
                android:id="@+id/pay_now_card"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/gray_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/pay_now"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp">

        </View>

    </LinearLayout>


</androidx.cardview.widget.CardView>