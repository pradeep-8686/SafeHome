<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_pink"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/added_member_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:padding="1dp"
            android:src="@drawable/close" />

    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_25dp"
        android:padding="1dp"
        android:src="@drawable/guest_waiting" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Guest"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:gravity="center"/>


    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Is Declined"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"
        android:textSize="17sp"
        android:gravity="center"/>

    <LinearLayout
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Guest Name"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"/>


        <TextView
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="William"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:layout_gravity="start"
            android:gravity="start"/>

    </LinearLayout>
    <LinearLayout
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Arrived Date"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:tint="@color/black"
                android:padding="1dp"
                android:src="@drawable/guest_date" />

            <TextView
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 1, 2021"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:layout_gravity=""
                android:gravity="start"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Arrived Time"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:padding="1dp"
                app:tint="@color/black"
                android:src="@drawable/guest_time" />

            <TextView
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09:00 AM"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp"
                android:layout_gravity="start"
                android:gravity="start"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>